generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  // url       = env("DATABASE_URL")
  // directUrl = env("DIRECT_URL")
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model users {
  id        Int      @id @default(autoincrement())
  id_desa   Int?
  nama      String
  username  String    
  password  String
  createdAt DateTime  @default(now())
}

model pasien {
  id      String  @id @default(uuid())
  nik     String
  nama    String
  nama_kk String
  desa    Int
  jk      String
  lahir   String
  hp      String
  skor    skor?
  fisik   fisik?
}

model fisik {
  id      String  @id @default(uuid())
  id_pasien String @unique
  pasien pasien @relation(fields: [id_pasien], references: [id])
  td Int[]
  gd Int
  tb Int
  bb Int
}

model skor {
  id      String  @id @default(uuid())
  id_pasien String @unique
  pasien    pasien @relation(fields: [id_pasien], references: [id])
  kesehatan Int[]
  penyakit  Int[]
  keluarga  Int[]
  pola      Int[]
  plusimt   Boolean @default(false)
  dm        Int
  ht        Int
  s         Int
  j         Int
  g         Int
  oa        Int
}